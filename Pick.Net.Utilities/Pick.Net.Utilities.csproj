<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net7.0</TargetFrameworks>
    <LangVersion>11.0</LangVersion>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/Pick-Net/Utilities</RepositoryUrl>
    <PackageProjectUrl>https://github.com/Pick-Net/Utilities</PackageProjectUrl>
    <AssemblyVersion>$(Version).$(BuildNumber)</AssemblyVersion>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)' == 'Release'">
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
  </PropertyGroup>
  <ItemGroup>
    <Service Include="{508349b6-6b84-4df5-91f0-309beebad82d}" />
  </ItemGroup>
  <ItemGroup>
    <None Include="Reflection\DelegateHelper.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>DelegateHelper.tt</DependentUpon>
    </None>
    <None Update="Reflection\DelegateHelper.tt">
      <Generator>TextTemplatingFileGenerator</Generator>
      <LastGenOutput>DelegateHelper.Designer.cs</LastGenOutput>
    </None>
  </ItemGroup>
  <Target Name="test" BeforeTargets="Build">
    <Message Importance="high" Text="Version: $(Version)"/>
    <Message Importance="high" Text="AssemblyVersion: $(AssemblyVersion)"/>
    <Message Importance="high" Text="FileVersion: $(FileVersion)"/>
  </Target>
</Project>
